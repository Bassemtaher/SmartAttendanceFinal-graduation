<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bassem.bassem.smartattendance.Counting">
    <Spinner
        android:id="@+id/spinCounting"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:entries="@array/subjects" />

    <Button
        android:id="@+id/Showno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/arkhip_font"
        android:text="Show"
        android:textColor="@color/colorwhite"
        app:layout_constraintBottom_toTopOf="@+id/theno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Year1" />

    <EditText
        android:id="@+id/Day1"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="29dp"
        android:clickable="false"
        android:hint="enter the day"
        android:textAlignment="center"

        android:inputType="none|number"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/Month1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Month1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="17dp"
        android:clickable="false"
        android:hint="enter the month"
        android:inputType="number"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/Year1"
        app:layout_constraintStart_toStartOf="@+id/Day1"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/Day1" />

    <EditText
        android:id="@+id/Year1"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:clickable="false"
        android:hint="enter the year"
        android:textAlignment="center"

        android:inputType="number"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/Showno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Month1" />

    <TextView
        android:id="@+id/theno"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:textAlignment="center"

        android:layout_marginBottom="205dp"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Showno" />

</android.support.constraint.ConstraintLayout>
