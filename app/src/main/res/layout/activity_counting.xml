<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bassem.bassem.smartattendance.Counting">

    <Button
        android:id="@+id/Showno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="99dp"
        android:layout_marginStart="23dp"
        android:text="Show"
        app:layout_constraintBottom_toTopOf="@+id/theno"
        app:layout_constraintStart_toStartOf="@+id/Month1"
        app:layout_constraintTop_toBottomOf="@+id/Month1" />

    <EditText
        android:id="@+id/Day1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:clickable="false"
        android:hint="enter the day"
        android:inputType="none|number"
        app:layout_constraintEnd_toStartOf="@+id/Month1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Month1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:clickable="false"
        android:hint="enter the month"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/Showno"
        app:layout_constraintEnd_toStartOf="@+id/Year1"
        app:layout_constraintStart_toEndOf="@+id/Day1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Year1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:hint="enter the year"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Month1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/theno"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginBottom="297dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Showno" />

</android.support.constraint.ConstraintLayout>
